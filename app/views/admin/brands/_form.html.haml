= simple_form_for [:admin, @brand], html: { class: 'form-horizontal' } do |f|
  - if @brand.persisted?
    = f.input :created_at, as: :string, input_html: { disabled: true }
    = f.input :updated_at, as: :string, input_html: { disabled: true }
  = f.input :name
  = f.input :slug
  = f.input :url
  = f.input :start_url
  = f.input :verification_matcher
  = f.input :meta_description
  = f.button :wrapped, cancel: admin_brands_path