- model_class = Category
.page-header
  %h1
    =t '.title', default: model_class.model_name.human.pluralize.titleize
    = link_to t('.new', default: t('helpers.links.new')), [:new, :admin, :category], class: 'btn btn-primary'

%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:slug)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', default: t('helpers.actions')

  %tbody
    - @categories.each do |category|
      %tr
        %td= category.id
        %td= category.name
        %td= category.slug
        %td=l category.created_at
        %td= link_to t('.edit', default: t('helpers.links.edit')), [:edit, :admin, category], class: 'btn btn-mini'